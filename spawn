<body>
    <div class="spawn-container">
        <div class="title">ВЫБЕРИТЕ ТОЧКУ СТАРТА</div>
        
        <div class="spawn-row">
            <div class="spawn-card" onclick="selectSpawn(0)" id="card-0">
                <div class="spawn-icon">Train</div>
                <div class="spawn-label">ВОКЗАЛ</div>
                <div class="spawn-key">Клавиша 1</div>
            </div>
            <div class="spawn-card" onclick="selectSpawn(1)" id="card-1">
                <div class="spawn-icon">Lock Open</div>
                <div class="spawn-label">МЕСТО ВЫХОДА</div>
                <div class="spawn-key">Клавиша 2</div>
            </div>
            <div class="spawn-card" onclick="selectSpawn(2)" id="card-2">
                <div class="spawn-icon">Home</div>
                <div class="spawn-label">ОРГАНИЗАЦИЯ</div>
                <div class="spawn-key">Клавиша 3</div>
            </div>
        </div>

        <button class="confirm-btn" id="confirmBtn" disabled>ПОДТВЕРДИТЬ</button>
    </div>

    <script>
        let selected = -1;
        const cards = document.querySelectorAll('.spawn-card');
        const btn = document.getElementById('confirmBtn');

        function selectSpawn(id) {
            selected = id;
            cards.forEach((c, i) => {
                c.classList.toggle('selected', i === id);
            });
            btn.disabled = false;
            btn.textContent = 'ПОДТВЕРДИТЬ';
            btn.classList.remove('confirmed');
        }

        function confirmSpawn() {
            if (selected === -1) return;

            console.log('Отправка: spawn_selected =', selected);
            cef.emit('spawn_selected', selected);

            btn.textContent = 'ГОТОВО!';
            btn.classList.add('confirmed');
            btn.disabled = true;

            // Анимация исчезновения через 1 сек
            setTimeout(() => {
                document.querySelector('.spawn-container').style.opacity = '0';
            }, 800);
        }

        // Клавиши
        document.addEventListener('keydown', e => {
            if (e.key === '1') selectSpawn(0);
            if (e.key === '2') selectSpawn(1);
            if (e.key === '3') selectSpawn(2);
            if (e.key === 'Enter' && !btn.disabled) confirmSpawn();
        });

        // Анимация появления
        window.addEventListener('load', () => {
            document.querySelector('.spawn-container').style.opacity = '1';
        });

        // CSS анимация
        const style = document.createElement('style');
        style.textContent = `
            .spawn-container { opacity: 0; transition: opacity 0.6s ease; }
        `;
        document.head.appendChild(style);
    </script>
</body>
