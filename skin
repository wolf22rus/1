


    
    
    Test CEF - Выбор скина
    


    
        Выберите скин
        
            ←
            
                
                Скин 1
            
            →
        
        Подтвердить выбор
    

<script>
    const maleSkins = [
        { id: 0, name: 'CJ', image: 'cj.png' },
        { id: 7, name: 'Ryder', image: 'ryder.png' },
        { id: 105, name: 'Grove Street', image: 'grove.png' },
        { id: 106, name: 'Smoke', image: 'smoke.png' }
    ];
    const femaleSkins = [
        { id: 108, name: 'Ballas Girl', image: 'ballas.png' },
        { id: 109, name: 'Vagos Girl', image: 'vagos.png' },
        { id: 110, name: 'Aztecas Girl', image: 'aztecas.png' }
    ];

    let skins = [];
    let currentSkinIndex = 0;

    window.addEventListener('message', (event) => {
        if(event.data.type === 'player:gender') {
            skins = event.data.gender === 1 ? maleSkins : femaleSkins;
            updateSkin();
        }
    });

    function updateSkin() {
        const skin = skins[currentSkinIndex];
        document.getElementById('skin-image').src = skin.image; // Замените на реальные пути
        document.getElementById('skin-name').textContent = skin.name;
    }

    function prevSkin() {
        currentSkinIndex = (currentSkinIndex - 1 + skins.length) % skins.length;
        updateSkin();
    }

    function nextSkin() {
        currentSkinIndex = (currentSkinIndex + 1) % skins.length;
        updateSkin();
    }

    function confirmSkin() {
        const skin = skins[currentSkinIndex];
        const data = JSON.stringify(skin.id);
        if(typeof samp !== 'undefined') {
            samp.callPublic('OnCefEvent', 'ss', 'player:select_skin', data);
        } else {
            console.log('Выбран скин:', skin.id);
        }
    }
</script>

